<h1>Your Dashboard</h1>
<a href="/new-post" class="btn btn-primary">New Post</a>

<div class="mt-4">
    {{#each posts}}
        <div class="card mb-4">
            <div class="card-body">
                <h2 class="card-title">{{this.title}}</h2>
                <p class="card-text">{{this.content}}</p>
                <footer class="blockquote-footer">Posted on {{this.createdAt}}</footer>
                <a href="/edit-post/{{this.id}}" class="btn btn-secondary">Edit</a>
                <button class="btn btn-danger delete-post" data-id="{{this.id}}">Delete</button>
            </div>
        </div>
    {{/each}}
</div>
